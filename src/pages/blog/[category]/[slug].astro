---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { blogPosts } from "@/lib/data";
import { Image } from "astro:assets";

const { category, slug } = Astro.params;

const post = blogPosts.find(
  (p: any) =>
    p.slug === slug && p.category.toLowerCase() === category?.toLowerCase(),
);

if (!post) {
  return Astro.redirect("/404");
}

// Opcional: Configurar caché para mejorar el rendimiento en servidor
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=3600, must-revalidate",
);
---

<BaseLayout title={`${post.title} | Blog`}>
  <article class="relative bg-surface-100 min-h-screen">
    <header class="pt-32 pb-16 bg-surface-200">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center space-y-6">
          <div class="flex items-center justify-center gap-2">
            <a
              href="/blog"
              class="text-ink-muted hover:text-primary transition-colors text-xs font-bold uppercase tracking-widest"
            >
              Blog
            </a>
            <span class="text-ink-muted">/</span>
            <a
              href={`/blog/${post.category.toLowerCase()}`}
              class="inline-block px-4 py-1.5 rounded-full bg-primary/10 text-primary text-xs font-bold uppercase tracking-widest hover:bg-primary/20 transition-colors"
            >
              {post.category}
            </a>
          </div>

          <h1
            class="text-4xl md:text-6xl font-light text-ink-base leading-[1.1]"
          >
            {post.title}
          </h1>

          <div
            class="flex flex-wrap items-center justify-center gap-4 md:gap-6 pt-4 text-ink-muted text-sm border-t border-base-light/50 max-w-md mx-auto"
          >
            <span class="font-bold text-ink-base">{post.author}</span>
            <span class="w-1 h-1 bg-base-strong rounded-full"></span>
            <time datetime={post.date}>{post.date}</time>
            <span class="w-1 h-1 bg-base-strong rounded-full"></span>
            <span>{post.readTime}</span>
          </div>
        </div>
      </div>
    </header>

    <div class="container mx-auto md:px-6 -mt-10 relative z-10">
      <div class="max-w-5xl mx-auto">
        <div
          class="md:aspect-video md:rounded-4xl overflow-hidden md:shadow-2xl md:border-8 md:border-white bg-surface-200"
        >
          <Image
            src={post.image}
            alt={post.title}
            width={1600}
            height={900}
            loading="eager"
            style={`view-transition-name: image-${post.slug}`}
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>

    <div class="container mx-auto md:px-6 py-16 md:py-20">
      <div class="flex flex-col gap-16 max-w-3xl mx-auto">
        <div class="flex-1 max-w-3xl mx-auto">
          <div class="prose-content px-4 md:px-0">
            <div set:html={post.content} />
          </div>

          <footer class="mt-16 pt-8">
            <div
              class="p-6 md:p-10 md:rounded-4xl bg-linear-to-br from-primary to-primary-dark text-ink-on-primary relative overflow-hidden group"
            >
              <div
                class="relative z-10 flex flex-col md:flex-row md:items-center justify-between gap-8"
              >
                <div class="max-w-md">
                  <h3 class="text-3xl font-medium mb-4">
                    ¿Deseas una evaluación médica?
                  </h3>
                  <p class="text-ink-on-primary/80 text-lg">
                    Nuestros especialistas en <span
                      class="font-medium text-white">{post.category}</span
                    > están listos para ayudarte a mejorar la salud de tu piel.
                  </p>
                </div>

                <div class="shrink-0">
                  <a
                    href="/contacto"
                    class="inline-block bg-white text-primary px-8 py-4 rounded-full font-medium text-lg hover:scale-105 hover:bg-surface-100 transition-all shadow-xl shadow-primary-dark/20"
                  >
                    Agendar Cita
                  </a>
                </div>
              </div>

              <div
                class="absolute -right-10 -top-10 w-64 h-64 bg-white/10 rounded-full blur-3xl group-hover:bg-white/20 transition-colors duration-700"
              >
              </div>
            </div>
          </footer>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style is:global>
  .prose-content {
    color: var(--color-ink-muted);
    line-height: 1.8;
    font-size: 1.125rem;
    font-family: inherit;
  }

  .prose-content h2,
  .prose-content h3,
  .prose-content h4 {
    color: var(--color-ink-base);
    font-weight: 600;
    line-height: 1.25;
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
    letter-spacing: -0.02em;
  }

  .prose-content h2 {
    font-size: 2.25rem;
  }
  .prose-content h3 {
    font-size: 1.875rem;
  }
  .prose-content h4 {
    font-size: 1.5rem;
  }

  .prose-content p {
    margin-bottom: 1.5rem;
  }

  .prose-content strong {
    color: var(--color-ink-base);
    font-weight: 600;
  }

  .prose-content em,
  .prose-content i {
    font-style: italic;
  }

  .prose-content ul,
  .prose-content ol {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }

  .prose-content li {
    margin-bottom: 0.75rem;
    padding-left: 0.5rem;
  }

  .prose-content ul li {
    list-style-type: disc;
  }

  .prose-content ul li::marker {
    color: var(--color-primary);
  }

  .prose-content ol li {
    list-style-type: decimal;
  }

  .prose-content ol li::marker {
    color: var(--color-primary);
    font-weight: 600;
  }

  .prose-content blockquote,
  .prose-content .bg-surface-200 {
    background-color: var(--color-surface-200);
    border-left: 4px solid var(--color-primary);
    padding: 2rem;
    border-radius: 0 1.5rem 1.5rem 0;
    margin: 2.5rem 0;
  }

  .prose-content blockquote p,
  .prose-content .bg-surface-200 p {
    margin-bottom: 0;
    color: var(--color-ink-base);
    font-size: 1.15rem;
    font-style: italic;
    font-weight: 600;
    line-height: 1.6;
  }

  .prose-content table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    margin: 2.5rem 0;
    border: 1px solid var(--color-base-light);
    border-radius: 1rem;
    overflow: hidden;
    font-size: 1rem;
  }

  .prose-content thead {
    background-color: var(--color-surface-200);
  }

  .prose-content th {
    padding: 1rem;
    text-align: left;
    font-weight: 700;
    color: var(--color-ink-base);
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    border-bottom: 1px solid var(--color-base-light);
  }

  .prose-content td {
    padding: 1rem;
    border-bottom: 1px solid var(--color-base-light);
    vertical-align: middle;
  }

  .prose-content tr:last-child td {
    border-bottom: none;
  }

  .prose-content img {
    max-width: 100%;
    height: auto;
    border-radius: 1.5rem;
    margin: 3rem auto;
    display: block;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05);
  }

  .prose-content a {
    color: var(--color-primary);
    font-weight: 600;
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: color 0.2s;
  }

  .prose-content a:hover {
    color: var(--color-primary-dark);
  }

  .prose-content hr {
    border: 0;
    border-top: 1px solid var(--color-base-light);
    margin: 3rem 0;
  }
</style>
