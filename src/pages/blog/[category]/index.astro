---
// src/pages/blog/[category].astro
import BaseLayout from "@/layouts/BaseLayout.astro";
import { blogPosts } from "@/lib/data";
import { Image } from "astro:assets";

const { category } = Astro.params;

const filteredPosts = blogPosts.filter(
  (post) => post.category.toLowerCase() === category?.toLowerCase(),
);

if (filteredPosts.length === 0) {
  return Astro.redirect("/blog");
}

const categoryName = category!.charAt(0).toUpperCase() + category!.slice(1);

const allCategories = [...new Set(blogPosts.map((post) => post.category))];
---

<BaseLayout title={`Artículos sobre ${categoryName}`}>
  <section class="pt-32 pb-24 bg-surface-100 min-h-screen">
    <div class="container mx-auto px-0 md:px-6">
      <header class="px-6 md:px-0 max-w-4xl mb-16 space-y-4">
        <nav
          class="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-ink-muted"
        >
          <a href="/blog" class="hover:text-primary transition-colors">Blog</a>
          <span>/</span>
          <span class="text-primary">{categoryName}</span>
        </nav>

        <h1 class="text-5xl md:text-7xl font-light text-ink-base leading-tight">
          Especialidad en <br />
          <span class="font-serif italic text-primary">{categoryName}</span>
        </h1>
        <p class="text-xl text-ink-muted max-w-xl">
          Explora los últimos avances, tratamientos y consejos expertos sobre {
            categoryName.toLowerCase()
          } dermatológica.
        </p>
      </header>

      <div class="px-6 md:px-0 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          filteredPosts.map((post) => (
            <article class="group bg-white rounded-3xl overflow-hidden border border-base-light shadow-sm hover:shadow-xl transition-all duration-500 flex flex-col h-full">
              <a
                href={`/blog/${post.category.toLowerCase()}/${post.slug}`}
                class="block relative aspect-video overflow-hidden"
              >
                <Image
                  src={post.image}
                  alt={post.title}
                  width={1600}
                  height={900}
                  loading="lazy"
                  style={`view-transition-name: image-${post.slug}`}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                />
                <div class="absolute inset-0 bg-linear-to-t from-ink-base/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
              </a>

              <div class="p-8 flex flex-col flex-1 space-y-4">
                <div class="flex items-center gap-3 text-[10px] font-bold text-ink-muted uppercase tracking-widest">
                  <time datetime={post.date}>{post.date}</time>
                  <span class="w-1 h-1 bg-primary rounded-full" />
                  <span>{post.readTime}</span>
                </div>

                <h2 class="text-2xl font-bold text-ink-base group-hover:text-primary transition-colors leading-snug">
                  <a href={`/blog/${post.category.toLowerCase()}/${post.slug}`}>
                    {post.title}
                  </a>
                </h2>

                <p class="text-ink-muted line-clamp-3 text-sm leading-relaxed flex-1">
                  {post.excerpt}
                </p>

                <div class="pt-4 border-t border-base-light flex items-center justify-between">
                  <span class="text-xs font-medium text-ink-base">
                    Por {post.author}
                  </span>
                  <a
                    href={`/blog/${post.category.toLowerCase()}/${post.slug}`}
                    class="text-primary hover:translate-x-1 transition-transform"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                      />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))
        }
      </div>

      <div
        class="mt-20 px-0 py-8 md:p-12 bg-white md:rounded-3xl border-y md:border border-base-light/60 md:shadow-sm relative overflow-hidden"
      >
        <h3
          class="text-xs font-bold text-primary mb-8 uppercase tracking-[0.2em] text-center"
        >
          Explorar otros temas
        </h3>

        <div
          class="flex flex-nowrap md:flex-wrap justify-start md:justify-center gap-3 md:gap-4 overflow-x-auto md:overflow-x-visible pb-6 md:pb-0 no-scrollbar px-4 md:mx-0 md:px-0"
        >
          {
            allCategories
              .filter((c) => c.toLowerCase() !== categoryName?.toLowerCase())
              .map((cat) => (
                <a
                  href={`/blog/${cat.toLowerCase()}`}
                  class="flex-none group px-8 py-3 rounded-full bg-surface-100 text-ink-muted text-sm font-medium border border-base-light/50 hover:border-primary hover:bg-primary hover:text-white transition-all duration-300 shadow-xs whitespace-nowrap"
                >
                  {cat}
                </a>
              ))
          }

          <a
            href="/blog"
            class="flex-none px-8 py-3 rounded-full bg-white text-primary text-sm font-medium border-2 border-primary/20 hover:border-primary transition-all duration-300 whitespace-nowrap"
          >
            Ver Todo
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
