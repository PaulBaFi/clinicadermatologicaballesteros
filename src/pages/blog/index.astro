---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { blogPosts } from "@/lib/data";

const categories = [...new Set(blogPosts.map((post) => post.category))];

// Particionamos la data dinámicamente
const featuredPost = blogPosts[0];
const sidebarPosts = blogPosts.slice(1, 4); // Siguientes 3 artículos
const gridPosts = blogPosts.slice(4); // El resto de artículos
---

<BaseLayout title="Blog">
  <section class="pt-32 pb-24 bg-surface-100">
    <div class="container mx-auto px-6">
      <div
        class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6"
      >
        <div class="max-w-2xl">
          <h2
            class="text-xs font-bold text-primary uppercase tracking-[0.2em] mb-4"
          >
            Nuestro Blog
          </h2>
          <h3
            class="text-4xl md:text-5xl font-light text-ink-base leading-tight"
          >
            Ciencia y cuidado para <span class="font-serif italic text-primary"
              >una piel saludable</span
            >
          </h3>
        </div>
        <p class="text-ink-muted max-w-sm text-lg md:text-right">
          Artículos escritos por especialistas en dermatología.
        </p>
      </div>

      <div class="mb-16">
        <div
          class="flex items-center gap-4 overflow-x-auto pb-4 no-scrollbar border-b border-base-light"
        >
          <a
            href="/blog"
            class="px-6 py-2 rounded-full bg-primary text-white text-sm font-medium shadow-md shadow-primary/20"
            >Todos</a
          >
          {
            categories.map((cat) => (
              <a
                href={`/blog/${cat.toLowerCase()}`}
                class="px-6 py-2 rounded-full bg-surface-100 text-ink-muted text-sm font-medium hover:bg-surface-200 transition-all whitespace-nowrap"
              >
                {cat}
              </a>
            ))
          }
        </div>
      </div>

      <div class="grid grid-cols-12 gap-8 lg:gap-12 mb-20">
        <article class="col-span-12 lg:col-span-8 group">
          <a
            href={`/blog/${featuredPost.category.toLowerCase()}/${featuredPost.slug}`}
            class="block space-y-6"
          >
            <div
              class="relative aspect-video overflow-hidden rounded-3xl bg-surface-200"
            >
              <img
                src={featuredPost.image}
                alt={featuredPost.title}
                style={`view-transition-name: image-${featuredPost.slug}`}
                class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-105"
              />
            </div>
            <div class="space-y-4">
              <span
                class="text-primary font-bold text-xs uppercase tracking-widest"
                >{featuredPost.category}</span
              >
              <h4
                class="text-3xl md:text-4xl font-bold text-ink-base group-hover:text-primary transition-colors"
              >
                {featuredPost.title}
              </h4>
              <p class="text-lg text-ink-muted line-clamp-2 italic">
                {featuredPost.excerpt}
              </p>
            </div>
          </a>
        </article>

        <div class="col-span-12 lg:col-span-4 flex flex-col gap-8">
          <h5
            class="text-xs font-bold uppercase text-ink-muted tracking-widest border-b border-base-light pb-2"
          >
            Tendencias
          </h5>
          {
            sidebarPosts.map((post) => (
              <a
                href={`/blog/${post.category.toLowerCase()}/${post.slug}`}
                class="group flex gap-4"
              >
                <div class="w-20 h-20 shrink-0 rounded-xl overflow-hidden bg-surface-100">
                  <img
                    src={post.image}
                    alt={post.title}
                    style={`view-transition-name: image-${post.slug}`}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform"
                  />
                </div>
                <div class="space-y-1">
                  <h4 class="text-sm font-bold text-ink-base group-hover:text-primary transition-colors line-clamp-2 leading-snug">
                    {post.title}
                  </h4>
                  <p class="text-[11px] text-ink-muted uppercase">
                    {post.date}
                  </p>
                </div>
              </a>
            ))
          }
        </div>
      </div>

      {
        gridPosts.length > 0 && (
          <div class="pt-16 border-t border-base-light">
            <h5 class="text-2xl font-light text-ink-base mb-10">
              Más artículos{" "}
              <span class="text-primary italic font-serif">de interés</span>
            </h5>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
              {gridPosts.map((post) => (
                <article class="group flex flex-col">
                  <a
                    href={`/blog/${post.category.toLowerCase()}/${post.slug}`}
                    class="space-y-4 flex-1"
                  >
                    <div class="aspect-video overflow-hidden rounded-2xl bg-surface-100">
                      <img
                        src={post.image}
                        alt={post.title}
                        style={`view-transition-name: image-${post.slug}`}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                      />
                    </div>
                    <div class="space-y-2">
                      <span class="text-[10px] font-bold text-primary uppercase">
                        {post.category}
                      </span>
                      <h4 class="text-xl font-bold text-ink-base group-hover:text-primary transition-colors leading-tight line-clamp-2">
                        {post.title}
                      </h4>
                      <p class="text-sm text-ink-muted line-clamp-3">
                        {post.excerpt}
                      </p>
                    </div>
                  </a>
                  <div class="flex items-center gap-3 mt-6 pt-4 border-t border-base-light text-[11px] text-ink-muted font-medium">
                    <span>{post.author}</span>
                    <span>•</span>
                    <span>{post.readTime}</span>
                  </div>
                </article>
              ))}
            </div>
          </div>
        )
      }
    </div>
  </section>
</BaseLayout>

<style>
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
